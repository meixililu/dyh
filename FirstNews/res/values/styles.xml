<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    
    <style name="Theme.NoTitle" parent="@android:style/Theme">
	  <item name="android:windowNoTitle">true</item>
	  <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
	</style>
	
    <style name="FadeTheme" parent="android:Theme">
  	    <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/FadeAnimation</item>
    </style>
	
    <style name="SlideAnimation">
  	    <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_left_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_right_out</item>
    </style>
    
    <style name="FadeAnimation">
  	    <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:taskOpenExitAnimation">@anim/fade_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:taskCloseExitAnimation">@anim/fade_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/fade_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/fade_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/fade_in</item>
        <item name="android:taskToBackExitAnimation">@anim/fade_out</item>
    </style>

</resources>