<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/topic_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topic_big_img" />

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:text="企业如何应对经济平飞"
        android:textColor="@color/yellow"
        android:textSize="@dimen/bigger_s" />

    <ImageView
        android:id="@+id/topic_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/listview_divider" />

    <TextView
        android:id="@+id/topic_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="5"
        android:text="国家统计局最新公布的数据显示，初步核算，一季度国内生产总值到达国家统计局最新公布的数据显示，初步核算，一季度国内生产总值到达国家统计局最新公布的数据显示，初步核算，一季度国内生产总值到达国家统计局最新公布的数据显示，初步核算，一季度国内生产总值到达国家统计局最新公布的数据显示，初步核算，一季度国内生产总值到达,国家统计局最新公布的数据显示，初步核算，一季度国内生产总值到达..."
        android:textColor="@color/white"
        android:textSize="@dimen/middle_s" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/topic_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="true"
            android:text="已有21人参与评论"
            android:textColor="@color/yellow"
            android:textSize="@dimen/middle_m" />

        <TextView
            android:id="@+id/topic_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="展开全部"
            android:textColor="@color/yellow"
            android:textSize="@dimen/middle_m" />
    </LinearLayout>

</LinearLayout>